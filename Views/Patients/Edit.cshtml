@model AnarkanHospital.Models.Patient

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
             <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="HealthProblem" class="control-label"></label>
                <input asp-for="HealthProblem" class="form-control" />

            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Critical" /> @Html.DisplayNameFor(model => model.Critical)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ArrivedAt" class="control-label"></label>
                <input asp-for="ArrivedAt" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="LeavingAt" class="control-label"></label>
                <input asp-for="LeavingAt" class="form-control" />

            </div>

            <div class="form-group">
            <label asp-for="DoctorId"></label>
           <select class="form-control" asp-for="DoctorId" asp-items="@(new SelectList(ViewBag.AllDoctors , "Id" , "Name"))">
               <option disabled selected>Select...</option>

           </select>
        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
